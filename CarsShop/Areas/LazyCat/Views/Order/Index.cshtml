@using CarsShop.Data.Entities
@model List<Order>


<div class="d-flex justify-content-between align-items-center">
    <h2>Order</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus"></i> Create New
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
<th>Id</th>
<th>CarId</th>
<th>ColorName</th>
<th>Date</th>
<th>ModelName</th>
<th>Price</th>
<th>UserId</th>
<th style="width: 160px;">Action</th>
</tr>

    </thead>
    <tbody>
    @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
<td>@item.CarId</td>
<td>@item.ColorName</td>
<td>@item.Date</td>
<td>@item.ModelName</td>
<td>@item.Price</td>
<td>@item.UserId</td>

                <td>
                    <div class="d-flex justify-content-between">
                        <a asp-area="lazycat" asp-controller="Order" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-area="lazycat" asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ms-2">
                            <i class="bi bi-trash"></i>
                        </a>
                     </div>
                </td>
            </tr>
        }
    </tbody>
</table>