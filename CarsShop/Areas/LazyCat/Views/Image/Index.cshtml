@using CarsShop.Data.Entities
@model List<Image>


<div class="d-flex justify-content-between align-items-center mt-5">
    <h2>Images table</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus"></i> Create New
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
<th>Id</th>
<th>ColorId</th>
<th>Url</th>
<th style="width: 160px;">Action</th>
</tr>

    </thead>
    <tbody>
    @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
<td>@item.ColorId</td>
<td>@item.Url</td>

                <td>
                    <div class="d-flex justify-content-between">
                        <a asp-area="lazycat" asp-controller="Image" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a onclick="return confirm('Are you sure delete?')" asp-area="lazycat" asp-controller="Image" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ms-2">
                            <i class="bi bi-trash"></i>
                        </a>
                     </div>
                </td>
            </tr>
        }
    </tbody>
</table>