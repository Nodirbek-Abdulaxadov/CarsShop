@model AddCategoryDto


<div class="d-flex justify-content-center">
    <div class="mt-4" style="width: 70%">
        <form asp-controller="categories" asp-action="add" enctype="multipart/form-data">
            <div class="card mb-4">
                <h5 class="card-header">New Category</h5>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="defaultFormControlInput" class="form-label">Name</label>
                        <input asp-for="Name" type="text"
                               class="form-control"
                               id="defaultFormControlInput"
                               aria-describedby="defaultFormControlHelp" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Image</label>
                        <input asp-for="file" class="form-control" type="file" id="formFile" />
                        <span asp-validation-for="file" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a asp-controller="categories" asp-action="index" class="me-2 btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>