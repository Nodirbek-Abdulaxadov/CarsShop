@model UpdateColorDto

<div class="d-flex justify-content-center">
    <div class="mt-4" style="width: 70%">
        <form asp-controller="colors" asp-action="edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="CarId" value="@Model.CarId" />
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="card mb-4">
                <h5 class="card-header">New Color</h5>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="defaultFormControlInput" class="form-label">Name</label>
                        <input asp-for="Name" type="text"
                               class="form-control"
                               id="defaultFormControlInput"
                               aria-describedby="defaultFormControlHelp" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="defaultFormControlInput" class="form-label">Color</label>
                        <input asp-for="HexCode" type="color"
                               class="form-control"
                               id="defaultFormControlInput"
                               aria-describedby="defaultFormControlHelp" />
                        <span asp-validation-for="HexCode" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Current Images</label>
                        <div class="d-flex justify-content-evenly">
                            @foreach (var image in Model.Images)
                            {
                                <div>
                                    <div style="border: 1px solid gray;">
                                        <img src="@image.Url" width="150" style="object-fit: contain;"
                                             asp-append-version="true" class="img-thumbnail" style="width: 100px; height: 100px" />
                                    </div>
                                    <a asp-controller="colors" asp-action="deleteimage" asp-route-colorId="@Model.Id" asp-route-carId="@Model.CarId" asp-route-imageId="@image.Id"
                                        class="btn btn-outline-danger m-0 p-1 w-100 mt-1"><i class="bi bi-trash3-fill"></i></a>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Image</label>
                        <input asp-for="Files" class="form-control" type="file" id="formFile" multiple />
                        <span asp-validation-for="Files" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a asp-controller="cars" asp-action="detail" asp-route-id="@Model.CarId" class="me-2 btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>