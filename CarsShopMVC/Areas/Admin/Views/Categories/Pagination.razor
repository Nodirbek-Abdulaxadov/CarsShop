@using CarsShopMVC.BusinessLogic.Common
@typeparam T

@if (Model.TotalPages > 1)
{
    <input type="hidden" value="@Model.PageNumber" id="pageNumber" />

    <div class="d-flex justify-content-center">
        @if (Model.TotalPages < 6)
        {
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (Model.PageNumber == i)
                        {
                            <li class="page-item active">
                                <a class="page-link"
                                   asp-controller="cars" asp-action="index" asp-route-pageNumber="@i">@i</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-controller="cars" asp-action="index" asp-route-pageNumber="@i">@i</a>
                            </li>
                        }
                    }
                </ul>
            </nav>
        }
        else if (Model.PageNumber < 3)
        {
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (Model.PageNumber == 1)
                    {
                        <li class="page-item disabled">
                            <a class="page-link" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" aria-label="Previous"
                               asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.PageNumber-1)">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="1">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="2">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="3">3</a>
                    </li>
                    <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="@Model.TotalPages">
                            @Model.TotalPages
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" aria-label="Previous"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.PageNumber+1)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
        else if (Model.TotalPages - 2 >= Model.PageNumber)
        {
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" aria-label="Previous"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.PageNumber-1)">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="1">1</a>
                    </li>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.PageNumber - 1)">
                            @(Model.PageNumber - 1)
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.PageNumber)">
                            @Model.PageNumber
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.PageNumber + 1)">
                            @(Model.PageNumber + 1)
                        </a>
                    </li>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.TotalPages)">
                            @Model.TotalPages
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" aria-label="Previous"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.PageNumber+1)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
        else
        {
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" aria-label="Previous"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.PageNumber-1)">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="cars" asp-action="index" asp-route-pageNumber="1">1</a>
                    </li>
                    <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.TotalPages - 2)">
                            @(Model.TotalPages - 2)
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.TotalPages - 1)">
                            @(Model.TotalPages - 1)
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.TotalPages)">
                            @Model.TotalPages
                        </a>
                    </li>
                    @if (Model.PageNumber == Model.TotalPages)
                    {
                        <li class="page-item disabled">
                            <a class="page-link" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" aria-label="Next"
                               asp-controller="cars" asp-action="index" asp-route-pageNumber="@(Model.PageNumber+1)">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
}

<script>
    var pageNumber = document.getElementById('pageNumber').value;
    var Items = document.getElementsByClassName('page-item');

    //get a element inside of Items
    for (var i = 0; i < Items.length; i++) {
        if (Items[i].children[0].innerText == pageNumber) {
            Items[i].classList.add('active');
        }
    }

</script>

@code {
    [Parameter]
    public int PageNumber { get; set; }
    [Parameter]
    public string ModelName { get; set; }

    public PageModel<T> Model { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var httpClient = new HttpClient();
        var response = await httpClient.GetAsync($"https://localhost:7187/admin/{ModelName}/index?pageNumber={PageNumber}");
        if (response.IsSuccessStatusCode)
        {
            Model = await response.Content.ReadFromJsonAsync<PageModel<T>>();
        }
    }
}
